<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="false"
    tools:context=".ui.profile.EditPasswordFragment">

    <TextView
        android:id="@+id/current_password_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/current_password_lbl_string"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_password_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/current_password_lbl" />

    <TextView
        android:id="@+id/new_password_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/new_password_lbl_string"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/current_password_container" />

    <EditText
        android:id="@+id/edit_password_lbl"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@+id/new_password_lbl"
        tools:layout_editor_absoluteX="32dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/save_lbl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="32dp"
        app:layout_constraintTop_toBottomOf="@id/edit_password_lbl"
        tools:layout_editor_absoluteX="32dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/save_lbl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_lbl_title_string"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>