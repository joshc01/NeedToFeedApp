<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.RestaurantItemDetailsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_details_image"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="45dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_details_name"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_details_price"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_details_quantity_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_details_quantity"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_button_transparent">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_quantity_decrease"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_remove_24"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_quantity_increase"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_add_24"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_details_add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_purple"
        android:text="@string/add_to_cart_string"
        android:layout_margin="24dp"
        android:textColor="@color/white" />

</LinearLayout>
